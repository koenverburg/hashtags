{
  "exclude": [
    ".next",
    "node_modules",
    "**/__tests__/*.spec.ts",
    "**/__tests__/*.spec.tsx"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "strict": false,
    "noEmit": true,
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "outDir": ".next",
    "moduleResolution": "node",
    "baseUrl": ".",
    "sourceMap": false,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@constants": [
        "./base/constants/index.ts"
      ],
      "@helpers": [
        "./base/helpers/index.ts"
      ],
      "@enums": [
        "./base/enums/index.ts"
      ],
      "@utils": [
        "./utils/index.ts"
      ],
      "@hoc": [
        "./hoc/index.ts"
      ],
      "@generic": [
        "./generic/index.ts"
      ],
      "@features": [
        "./features/index.ts"
      ],
      "@components": [
        "./components/index.ts"
      ],
      "@containers": [
        "./containers/index.ts"
      ],
      "@interfaces/*": [
        "./base/interfaces/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
