{
  "name": "thebase",
  "version": "1.0.0",
  "description": "The base is a boilerplate that is maintained by Koen Verburg",
  "author": {
    "name": "Koen Verburg",
    "email": "creativeKoen@gmail.com"
  },
  "contributors": [],
  "bugs": {},
  "directories": {
    "app": "app/",
    "test": "test/"
  },
  "license": "ISC",
  "scripts": {
    "serve": "next -p 8000 ./app",
    "server": "cross-env NODE_ENV=development node ./server.js",
    "dist": "next build ./app",
    "export": "next export ./app -o dist",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "test": "jest --reporters=default -u -i --notify --verbose",
    "test:ci": "jest --ci --verbose --reporters=default",
    "test:report": "jest --ci --verbose --reporters=jest-junit",
    "test:coverage": "jest --ci --coverage",
    "accessability": "pa11y --config ./pa11y.config.json",
    "accessability:ci": "pa11y --config ./pa11y.config.json --json > ./.reports/wcag/report.json",
    "accessability:ci:html": "pa11y-ci-reporter-html",
    "lint": "tslint app/**/**/*.{ts,tsx}",
    "lint:sass": "sass-lint -v -q",
    "lighthouse:mobile": "node ./bin/lighthouse/runner.js --platform mobile",
    "lighthouse:desktop": "node ./bin/lighthouse/runner.js --platform desktop",
    "make": "plop --plopfile ./config/generators/cli.js"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
