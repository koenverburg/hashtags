    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "3.4.3",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "jest-resolve-cached": "^1.0.0",
    "lighthouse": "^5.6.0",
